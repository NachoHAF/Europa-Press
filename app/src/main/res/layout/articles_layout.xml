<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="16dp">

        <com.rishabhharit.roundedimageview.RoundedImageView
            app:cornerRadius="16dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageTopNews"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/home_imageview_background"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp">
        </com.rishabhharit.roundedimageview.RoundedImageView>

        <TextView
            android:id="@+id/titleTopNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alberto Fern치ndez y F치tima G치lvez dan a Espa침a el primer oro en Tokyo 2020"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/imageTopNews"
            android:layout_alignParentTop="true"
            android:textSize="14sp"
            android:maxLines = "3"
            android:ellipsize = "end"
            />


        <TextView
            android:id="@+id/timeTopNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="1dp"
            android:text="1 hour Ago"
            android:textColor="@color/gray"
            android:textSize="12sp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/imageTopNews"
            android:text="europapress.es"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="@color/gray"
            tools:ignore="SmallSp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>